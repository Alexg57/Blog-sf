{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bienvenue sur mon blog</h1>
</div>

        {% for post in posts %}
        <div class="col-lg-6">
              <!-- Blog post-->
              <div class="card mb-4" style="width: 18rem;">
                  <div class="card-body">
                      <div class="small text-muted">{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</div>
                      <h2 class="card-title h4">{{post.title}}</h2>
                          <h6 class="card-subtitle mb-2 text-muted">{{post.category}}</h6>
                      <p class="card-text">{{post.content}}...</p>
                      <a class="btn btn-primary get-one-post" href="/show/{{post.id}}">Lire la suite â†’</a>
                  </div>
              </div>
              
          </div>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
